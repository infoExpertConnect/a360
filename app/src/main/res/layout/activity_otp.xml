<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.OTPActivity">


    <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/padding_large"
            app:layout_constraintBottom_toTopOf="@+id/linearlayout_otp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/otp_text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="monospace"
            android:gravity="center"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/linearlayout_otp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/Edt_otp1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:hint="8"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="15dp"
                android:singleLine="true"/>

        <EditText
                android:id="@+id/Edt_otp2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:hint="2"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="15dp"
                android:singleLine="true"/>

        <EditText
                android:id="@+id/Edt_otp3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:hint="6"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="15dp"
                android:singleLine="true"/>

        <EditText
                android:id="@+id/Edt_otp4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:hint="5"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="15dp"
                android:singleLine="true"/>
        <EditText
                android:id="@+id/Edt_otp5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:hint="5"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="15dp"
                android:singleLine="true"/>
        <EditText
                android:id="@+id/Edt_otp6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:hint="5"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="15dp"
                android:singleLine="true"/>
    </LinearLayout>
    <Button
            android:id="@+id/phone_number_button"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/padding_medium"
            android:fontFamily="monospace"
            android:paddingRight="@dimen/padding_medium"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout_otp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="50dp"
            android:background="@drawable/phone_login_button_shape"
            android:text="@string/phone_number_submit"
            android:layout_marginTop="@dimen/padding_medium"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_xmedium"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>