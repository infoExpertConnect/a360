<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    app:cardCornerRadius="@dimen/padding_small"
                                    app:cardElevation="8dp"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/large_margin"
                android:src="@color/colorBlack"
                android:scaleType="fitXY"
                android:id="@+id/image_lead"
                android:layout_width="0dp"
                android:layout_height="150dp"/>
        <TextView
                app:layout_constraintStart_toStartOf="@+id/image_lead"
                app:layout_constraintTop_toTopOf="@+id/image_lead"
                app:layout_constraintBottom_toBottomOf="@+id/image_lead"
                app:layout_constraintEnd_toEndOf="@+id/image_lead"
                android:layout_marginTop="@dimen/large_margin"
                android:textSize="@dimen/text_size_large"
                android:id="@+id/lead_name"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/image_lead"
                android:text="Lead Type"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>